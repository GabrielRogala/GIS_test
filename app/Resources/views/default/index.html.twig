{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-xs-12">
                <div class="well">
                    <h2>
                        Gabriel Rogala - GIS test
                    </h2>
                    <button onClick="location.href = '{{ path('photos') }}'" type="button" class="btn btn-default" >PHOTOS</button>
